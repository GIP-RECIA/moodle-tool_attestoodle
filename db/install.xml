<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/attestoodle/db" VERSION="20180524" COMMENT="XMLDB file for Moodle blocks/attestoodle"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
      
    <TABLE NAME="block_attestoodle_training" COMMENT="Table that describes the trainings in Attestoodle">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="The name of the training"/>
        <FIELD NAME="categoryid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the course category corresponding to the training"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_category_id" TYPE="foreign" FIELDS="categoryid" REFTABLE="mdl_course_categories" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    
    <TABLE NAME="block_attestoodle_milestone" COMMENT="Table that stores the milestone values in Attestoodle">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
        <FIELD NAME="milestone" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The milestone value (in minutes) of the activity"/>
        <FIELD NAME="moduleid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the course module corresponding to the activity"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_module_id" TYPE="foreign" FIELDS="moduleid" REFTABLE="mdl_course_modules" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    
  </TABLES>
</XMLDB>